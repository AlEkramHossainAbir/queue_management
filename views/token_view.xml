                                    <ul style="font-size:16px">
                                        <li>Token :
                                            <field name="token_seq"/>
                                        </li>
                                        <li>Category :
                                            <field name="category"/>
                                        </li>
                                        <li>Date :
                                            <field name="current_date"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
